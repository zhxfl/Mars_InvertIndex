  <script type="text/javascript">
//初始化地图

var map = null;

var map = null;
var pointArray = [];
for(var item in pointObj){   //将json中的数据存起来
                pointArray.push(pointObj[item]);
            }
            	
function initMap(){
        map = new BMap.Map("allmap");                        // 创建Map实例
        map.centerAndZoom(new BMap.Point(116.404, 39.915), 11);     // 初始化地图,设置中心点坐标和地图级别
        map.addControl(new BMap.NavigationControl());               // 添加平移缩放控件
       // map.addControl(new BMap.ScaleControl());                    // 添加比例尺控件
        map.addControl(new BMap.OverviewMapControl());              //添加缩略地图控件
        map.enableScrollWheelZoom();                            //启用滚轮放大缩小
        //map.addControl(new BMap.MapTypeControl());          //添加地图类型控件
        map.setCurrentCity("上海");          // 设置地图显示的城市 此项是必须设置的
}

initMap();

    $(document).ready(function(){
        drawMakers(pointArray[0]);
        $(".tag_options li").on("click",function(){
            var px = $(this).attr("px");
            var py = $(this).attr("py");
            var num = $(this).attr("currNum");
            $("#city_selected").attr("px",px);
            $("#city_selected").attr("py",py);
            $("#city_selected").attr("currNum",num);
           })
        $(".select_btn").on("click",function(){
            var city_name = $("#city_selected").text();
            var px = $("#city_selected").attr("px"),py=$("#city_selected").attr("py")
            map.centerAndZoom(new BMap.Point(px,py),10);
            map.setCurrentCity(city_name);  
            var num = $("#city_selected").attr("currNum");
            drawMakers(pointArray[num]);
        })
    })
function drawMakers(val)
{
    map.clearOverlays();
    var pointArr = [];

    for(var i = 0, len = val.length; i < len; i++){
        pointArr.push(val[i].name);
    }

    var local = new BMap.LocalSearch(map, {renderOptions: {map: map}});
    local.setInfoHtmlSetCallback(function(a,b){

        var imgs = b.parentNode.parentNode.parentNode.getElementsByTagName("img");

        for (var i = 0; i < imgs.length; i++) {
            var img = imgs[i];
            if(img.src == "http://api.map.baidu.com/images/phone.png"){
                img.style.display = "none";
                break;
            }
        }
    })  
    local.setPageCapacity(20);
    local.disableFirstResultSelection();
    local.search(pointArr, map.getBounds());
}
</script>
