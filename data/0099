        window.appHeader.create("android");
        window.updateVersion('android');
        //统计方法
        var sendLog = function(pos){
            var opt = {
                ref : "mo_official",
                page : "home",
                pos: pos
            };
            ting.logger.log('click',opt);
        };
        $('.download').on('click', function() {
            sendLog('android_down');
        });

        //banner轮播图
        var $carousel_lis = $('.carousel li');
        var $carousel = $('.carousel');
        var carousel_count = $carousel_lis.length;
        var li_width = parseInt($carousel_lis.eq(0).css('width'), 10);
        var curIndex = 0;
        var originLeft = $carousel.css('marginLeft');
        var carousel_interval = setInterval(function() {
            if(curIndex == carousel_count-1 ) {
                $carousel.css('marginLeft', originLeft);
                curIndex = 0;
            } else {
                $carousel.animate( { 'marginLeft': '-='+li_width } ); 
                curIndex++;
            } 
        }, 2000);

        createClickMonkey("baidumusic-mobile");
    </script>

