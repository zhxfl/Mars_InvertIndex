<script type="text/javascript">
//右侧浮层
window.onload = function()
{
	rz();
}
window.onresize = function(){rz()}
function rz()
{
	//sidepop
	var ele = document.getElementById("sidepop");
	//var w = document.body.clientWidth;
	var h = document.documentElement.clientHeight;
	var w = document.documentElement.clientWidth;
	var hh = parseInt((h+70)/2);hh = hh<0?0:hh;
	ele.style.top = hh+"px";
	var pw = 974;
	if(w>pw)
	{
		var ww = parseInt((w-pw)/2);
		ele.style.right = ww-34+"px";
	}
	else
	{
		ele.style.right = "0px";
	}
	positionFixed(ele,hh)
}
function positionFixed(obj,height){
	var iE6=!-[1,]&&!window.XMLHttpRequest;

	if(iE6)
	{
		document.documentElement.style.textOverflow="ellipsis";
		obj.style.position="absolute";
		obj.style.setExpression("top", "eval(documentElement.scrollTop+"+height+')+"px"');
	}
}
function gotop()
{
	window.scrollTo(0, 0);
}
</script>

